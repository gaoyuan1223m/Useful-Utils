{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "outDir": "dist",
    "downlevelIteration": true,
    "strict": true,
    "strictNullChecks": false,
    "declaration": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "types": [
      "node",
      "jest"
    ],
    "esModuleInterop": true,
    "inlineSources": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}